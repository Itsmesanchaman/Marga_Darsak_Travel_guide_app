<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plan"
    android:fitsSystemWindows="true"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plan"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:id="@+id/textviewId"
        />

    <TextView
        android:id="@+id/textPlan"
        android:layout_width="100dp"
        android:layout_below="@+id/textviewId"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Plan"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textFavorites"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/textviewId"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:text="Favorites"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/indicator"
        android:layout_width="55dp"
        android:layout_height="2dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:background="@android:color/black"
        android:layout_below="@+id/textPlan"
        android:layout_marginStart="40dp"
        />


    <TextView
        android:id="@+id/planMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPlan"
        android:text="@string/you_don_t_have_any_plan"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        />

    <TextView
        android:id="@+id/favoritesMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFavorites"
        android:layout_centerHorizontal="true"
        android:text="@string/you_don_t_have_any_favorites"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="250dp"
        />

    <LinearLayout
        android:id="@+id/favoritesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textPlan"
        >


    </LinearLayout>





</RelativeLayout>

