<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sk"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp"
        android:id="@+id/skipId"
        android:textSize="20sp"
        android:textColor="@color/Blue"
        tools:ignore="RelativeOverlap" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wman"
        android:layout_marginStart="160dp"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginTop="220dp"
        android:layout_marginStart="173dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="45dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_password"
        android:layout_marginTop="390dp"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/passwordIdLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditTextID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordIdLayout"
        android:text="@string/forget_password"
        android:layout_marginStart="250dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/Blue"
        android:id="@+id/forgetPasswordId"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/login"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passwordIdLayout"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textSize="18sp"
        android:id="@+id/loginBtn"
        android:backgroundTint="@color/light_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_account"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/loginBtn"
        android:textSize="15sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="215dp"
        android:layout_below="@+id/loginBtn"
        android:textColor="@color/Blue"
        android:text="@string/register_here"
        android:id="@+id/registerId"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_log_in_with"
        android:layout_marginTop="40dp"
        android:layout_marginStart="200dp"
        android:layout_below="@+id/loginBtn"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/usernameErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="370dp"
        android:text="@string/iu"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/passwordErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="470dp"
        android:text="@string/ip"
        android:textColor="#FF0000"
        android:visibility="gone" />



    <ToggleButton
        android:id="@+id/passwordVisibilityToggle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/view"
        android:button="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:textOff=""
        android:textOn="" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/googleSI"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBtn"
                android:layout_centerInParent="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/search_view_bg"
                android:backgroundTint="@color/huss"
                android:drawableStart="@drawable/searche"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/search_view_bg"
        android:layout_below="@+id/googleSI"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/us"
        android:text="@string/log_in_as_admin"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="10dp"
        android:drawablePadding="-10dp"
        android:backgroundTint="#75627A"
        android:layout_marginBottom="20dp"
        android:id="@+id/adminLoginId"
        />


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>